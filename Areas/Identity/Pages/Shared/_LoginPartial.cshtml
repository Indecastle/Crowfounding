@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@inject IHtmlLocalizer<SharedResource> SL
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="navbar-brand" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@SL["Hello"] @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post">
                <button type="submit" class="nav-link btn btn-link">@SL["Logout"]</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="navbar-brand" asp-area="Identity" asp-page="/Account/Register">@SL["Base_Register"]</a>
        </li>
        <li class="nav-item">
            <a class="navbar-brand" asp-area="Identity" asp-page="/Account/Login">@SL["Base_Login"]</a>
        </li>
    }
</ul>
